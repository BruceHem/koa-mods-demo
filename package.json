{
  "name": "ts-starter",
  "version": "1.0.0",
  "description": "A simple starter project with Typescript.",
  "main": "dist/index.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "tsc && node dist/index.js",
    "start:dev": "nodemon -x ts-node src/index.ts"
  },
  "author": "Bruce Hem <bruce.hem@pathmazing.com>",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^4.0.0",
    "if-env": "^1.0.0",
    "kcors": "^2.2.1",
    "koa": "^2.3.0",
    "koa-bodyparser": "^4.2.0",
    "koa-mods": "^0.3.0",
    "koa-router": "^7.2.1"
  },
  "devDependencies": {
    "@types/dotenv": "^4.0.1",
    "@types/koa": "^2.0.39",
    "@types/koa-router": "^7.0.23",
    "@types/node": "^8.0.31",
    "nodemon": "^1.12.1",
    "ts-node": "^3.3.0",
    "tslint": "^5.7.0",
    "typescript": "^2.5.3"
  }
}
